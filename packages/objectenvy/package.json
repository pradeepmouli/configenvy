{
  "name": "objectenvy",
  "version": "1.0.0",
  "description": "Automatically map process.env to strongly-typed, nested config objects with camelCase fields",
  "keywords": [
    "config",
    "configuration",
    "env",
    "environment",
    "typescript",
    "type-safe",
    "zod",
    "nested",
    "camelcase"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:native": "tsgo -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "check:native": "tsgo --noEmit -p tsconfig.json",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "format:check": "oxfmt --check src",
    "type-check": "tsc --noEmit -p tsconfig.json"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "tsx": "^4.7.0",
    "typescript": "^5.9.0",
    "vitest": "^2.0.0"
  },
  "peerDependencies": {
    "zod": "^4.3.4"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pradeepmouli/objectenvy",
    "directory": "packages/objectenvy"
  }
}
